<div class ="jumbotron">
  <%= form_tag '/carted_products', method: :post do %>
    <div class="row">
      <div class = "col-md-12">
        <h1><%= @product.name %></h1>
        <p>Price: <%= @product.price.to_f %></p>
        <p>Tax: <%= @product.tax %></p>
        <p>Grand total: <%= @product.grand_total %></p>
        <p>Category: <%= @product.printable_categories %></p>
          <!-- <ul>
            <% @product.categories.each do |category| %>
              <li><%= category.name %></li>
            <% end %>
          </ul> -->
        <p>Status: <%= @product.sale_message %></p>
        <p>Quantity in stock: <%= @product.quantity %></p>
        <p>Description: <%= @product.description %></p>
        <p>Deliciousness: <%= @product.deliciousness %></p>
        <p>Supplier: <%= @product.supplier.name %></p>
        <%= link_to "Edit this product", "/products/#{@product.id}/edit", class: "btn btn-default" %>
        <%= link_to "Delete this product", "/products/#{@product.id}", class: "btn btn-danger", method: :delete %>
        <%= link_to "Back to all products", "/products", class: "btn btn-info" %>
      </div>
    </div>
    <div class = "row">
      <div class= ".col-md-4">
        <% @product.images.each do |image_object| %>
          <%= image_tag(image_object.url, class: "img-responsive")  %>
        <% end %>
      </div>
    </div>
  
    <div class = "form_group">
      <%= text_field_tag :quantity, nil, class: "form-control", placeholder: "Add quantity here!" %>
    </div>
    <div class = "form_group">
      <%= text_field_tag :product_id, nil, class: "form-control", placeholder: "Add product ID here! (Hint: look at the # in the URL.)" %>
    </div>
    <div>
      <%= button_tag 'Add to cart!', class: "btn btn-success" %>
    </div>
  <% end %>
</div>