<div class = "jumbotron">
  <h1 class = "create">Edit a product:</h1>

  <%= form_tag "/products/#{@product.id}", method: :post do %>
    <div class = "form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "form-control", placeholder: "Enter name here! " %>
    </div>
    <div class = "form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price, class: "form-control", placeholder: "Enter price here!" %>
    </div>
    <div class = "form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control", placeholder: "Enter a description here!" %>
    </div>
    <div class = "form-group">
      <%= label_tag :deliciousness %>
      <%= text_field_tag :deliciousness, @product.deliciousness, class: "form-control", placeholder: "Enter deliciousness here!" %>
    </div>
    <div>
      <%= button_tag 'Update product', class: "btn btn-default" %>
    </div>
  <% end %>
</div>