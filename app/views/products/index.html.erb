<div class = "jumbotron">
  <div class = "row">
    <% @products.each do |product| %>
      <div class = "col-md-4">
        <div class = "well">
          <h2><%= link_to product.name,"/products/#{product.id}"%></h2>
          <p>Price: <%= product.price.to_f %></p>
          <p>Description: <%= product.description %></p>
          <p>Deliciousness: <%= product.deliciousness %></p>
          <%= image_tag(product.images[0].url, class: "img-responsive") %>
        </div>
      </div>
    <% end %>
  </div>
</div>

