    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class = "jumbotron">
  <h1 class = "create">Create a product:</h1>

  <%= form_tag '/products', method: :post do %>
    <div class = "form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter name here! " %>
    </div>
    <div class = "form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, nil, class: "form-control", placeholder: "Enter price here!" %>
    </div>
    <div class = "form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, nil, class: "form-control", placeholder: "Enter a description here!" %>
    </div>
    <div class = "form-group">
      <%= label_tag :deliciousness %>
      <%= text_field_tag :deliciousness, nil, class: "form-control", placeholder: "Enter deliciousness here!" %>
    </div>
    <div class = "form-group">
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity, nil, class: "form-control", placeholder: "How many are in stock?" %>
    </div>
    <div>
      <%= button_tag 'Create product', class: "btn btn-default" %>
    </div>
  <% end %>
</div>
